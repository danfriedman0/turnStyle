{
	"manifest_version": 2,

	"name": "turnstyle",
	"description": "Customize the style of any page on the web",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Restyle this page"
	},

	"permissions": [
		"activeTab",
		"storage"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	}
}